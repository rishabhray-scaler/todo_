<p id="notice"><%= notice %></p>
<p>
  <strong>Title:</strong>
  <%= @todo_list.title %>
</p>

<p>
  <strong>Description:</strong>
  <% if @todo_list.description.present? %>
    <%= @todo_list.description %>
  <% else %>
    <%# Inline small form to add description after creating from the homepage %>
    <%= form_with model: @todo_list, url: todo_list_path(@todo_list), method: :patch, local: true do |f| %>
      <%= f.text_area :description, placeholder: 'Add a short description...', rows: 3, style: 'width:60%;' %>
      <%= f.submit 'Save description', class: 'btn-ghost', style: 'margin-left: .5rem;' %>
    <% end %>
  <% end %>
</p>
<div id="todo_items_wrapper">
 <%= render @todo_list.todo_items %>
 <div id="form">
  <%= render "todo_items/form" %>
 </div>
</div>
<%= link_to 'Edit', edit_todo_list_path(@todo_list) %> |
<%= link_to 'Back', todo_lists_path %>